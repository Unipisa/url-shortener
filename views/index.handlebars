<section class="container d-flex flex-column justify-content-center vh-100">
  <h1 class="text-center">URL Shortener</h1>
  <h1 class="display-1 text-center my-5"><i class="fas fa-link"></i></h1>
  <form action="/" method="POST" class="w-75 mx-auto d-flex flex-column align-items-center">
    <div class="form-group w-100">
      <label for="url" class="sr-only"></label>
      <input type="url" name="url" id="url" class="form-control" placeholder="Your Website URL" required>
    </div>
    <button class="btn btn-outline-primary w-50" id="submit">Submit</button>
  </form>
</section>